# ==============================================
# CodeCollab Studio - Environment Configuration
# ==============================================

# Database Configuration
MONGO_USERNAME=codecollab
MONGO_PASSWORD=your_secure_password_here
MONGO_DATABASE=codecollab_db

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Server Configuration
SERVER_PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Client Configuration
VITE_API_URL=http://localhost:5000
VITE_WS_URL=ws://localhost:5000

# Monitoring Configuration
GRAFANA_PASSWORD=admin_password_here

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Code Execution Configuration
EXECUTION_TIMEOUT=30000
MAX_MEMORY_LIMIT=128m
MAX_CPU_LIMIT=50

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_ACCESS_LOGS=true

# Production URLs (Update for production)
PRODUCTION_API_URL=https://api.yourapp.com
PRODUCTION_WS_URL=wss://api.yourapp.com
PRODUCTION_CLIENT_URL=https://yourapp.com